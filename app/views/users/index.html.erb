<h1>Пользователи</h1>

<%= link_to 'Загрузить', upload_users_path %>
<table>
  <tr>
    <th>Фамилия Имя Отчество</th>
    <th>Отдел</th>
    <th>График</th>
    <th>Лимит</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.fullname, user %></td>
    <td><%= user.userlog.last.cfu.namecfu %></td>
    <td><%= user.userlog.last.schedule.times %>
         
    </td>
    <td><%= user.userlog.last.sumlimit.namelimit %></td>
    <td><%= link_to 'Выдать sim', putsim_user_path(user) %></td>
    <td><%= link_to 'Забрать sim', getsim_user_path(user) %></td>
    <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

