<h1>Расписание</h1>

<table>
  <tr>
    <th>Время начала</th>
    <th>Время окончания</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.timein.to_formatted_s(:time)  %></td>
    <td><%= schedule.timeout.to_formatted_s(:time)  %></td>
    <td><%= link_to 'Редактировать', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Удалить', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

